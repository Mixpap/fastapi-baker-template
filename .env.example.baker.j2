# Environment Configuration for {{project_name}}

{%- if use_logfire and logfire_token %}
# Logfire configuration
LOGFIRE_TOKEN={{logfire_token}}
{%- endif %}

{%- if use_database %}
# Database configuration
{%- if database_type == "sqlite" %}
DATABASE_URL=sqlite:///./app.db
{%- elif database_type == "postgresql" %}
DATABASE_URL=postgresql://username:password@localhost/{{project_name.lower().replace('-', '_')}}
{%- elif database_type == "mysql" %}
DATABASE_URL=mysql://username:password@localhost/{{project_name.lower().replace('-', '_')}}
{%- endif %}
{%- endif %}

